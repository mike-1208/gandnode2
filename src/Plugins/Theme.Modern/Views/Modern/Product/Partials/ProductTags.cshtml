@model IList<ProductTagModel>
<b-col cols="12" class="product-tags-box px-0">
    <div class="product-tags-list">
        @for (int i = 0; i < Model.Count; i++)
        {
            <b-button size="sm" variant="outline-secondary" class="producttag" href="@Url.RouteUrl("ProductsByTagName", new { SeName = Model[i].SeName })">
                @Model[i].Name <span>@Loc["Products.Tags.Count", Model[i].ProductCount]</span>
            </b-button>
        }
    </div>
</b-col>
