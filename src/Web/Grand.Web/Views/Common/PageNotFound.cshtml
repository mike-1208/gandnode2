@inject IPageHeadBuilder pagebuilder
@{
    Layout = "_SingleColumn";

    //title
    pagebuilder.AddTitleParts(Loc["Title.PageNotFound"]);
}
<div class="page text-xs-center not-found-page">
    <div class="alert alert-info my-3">
        <h1 class="h2 generalTitle text-center mb-0">
            <b-icon icon="exclamation-circle"></b-icon> @Loc["Title.PageNotFound"]
        </h1>
    </div>
    @await Component.InvokeAsync("PageBlock", new { systemName = "PageNotFound" })
</div>