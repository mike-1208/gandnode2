@model CustomerActionModel
@{
    //page title
    ViewBag.Title = Loc["Admin.Customers.CustomerAction.AddNew"];
}
<form asp-area="@Constants.AreaAdmin" asp-controller="CustomerAction" asp-action="Create" method="post" id="customer-action-form">
    
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-user"></i>
                        @Loc["Admin.Customers.CustomerAction.AddNew"]
                        <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(Loc["Admin.Customers.CustomerAction.BackToList"], "List")</small>
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided">
                            <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @Loc["Admin.Common.Save"] </button>
                            <button class="btn btn-success" type="submit" name="save-continue"><i class="fa fa-check-circle"></i> @Loc["Admin.Common.SaveContinue"] </button>
                        </div>
                    </div>
                </div>
                <div class="x_content form">
                   <partial name="Partials/CreateOrUpdate" model="Model" />
                </div>
            </div>
        </div>
    </div>
</form>
