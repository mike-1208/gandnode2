@model string

@Html.TextBoxFor(model => model, new {@class = "col-md-8", style="width: 100%;"  })

<script>
    $(document).ready(function () {
        $("#@Html.IdForModel()").kendoDropDownList({
            autobind: false,
            optionLabel: "Select collection...",
            filter: "startswith",            
            dataSource: {
                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("Collection", "Search", new { area = Constants.AreaVendor, collectionId = Model }))"
                    }
                },
                schema: {
                    data: "Data"
                },
                serverFiltering: true
            },
            dataTextField: "Name",
            dataValueField: "Id",
        });
    });
</script>
